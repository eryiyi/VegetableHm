<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/zhuye_item_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:src="@drawable/default_avatar"
            android:layout_width="60dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:id="@+id/head"
            android:layout_height="60dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginRight="65dp"
              android:layout_marginLeft="8dp"
              android:textSize="16sp"
              android:text="sfsdafd"
              android:id="@+id/nickname"
              android:layout_toRightOf="@+id/head"
              android:textColor="@color/textColor"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/distance"
              android:layout_marginLeft="10dp"
              android:text="1.5KM"
              android:layout_marginTop="5dp"
              android:textColor="@color/text_color"
              android:layout_below="@+id/nickname"
              android:layout_toRightOf="@+id/head"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="26dp"
               android:layout_marginTop="1dp"
               android:id="@+id/img_xinyong"
               android:scaleType="fitCenter"
               android:visibility="gone"
               android:layout_marginLeft="6dp"
               android:layout_marginRight="8dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/tree_icons_trust"
               android:layout_height="wrap_content"/>
    <ImageView android:layout_width="26dp"
               android:layout_marginTop="1dp"
               android:id="@+id/img_xiehui"
               android:scaleType="fitCenter"
               android:visibility="gone"
               android:layout_toLeftOf="@+id/img_xinyong"
               android:src="@drawable/tree_icons_group"
               android:layout_height="wrap_content"/>
    <ImageView android:layout_width="80dp"
               android:id="@+id/star"
               android:visibility="gone"
               android:scaleType="fitCenter"
               android:layout_marginRight="8dp"
               android:layout_below="@+id/img_xinyong"
               android:layout_alignParentRight="true"
               android:src="@drawable/tree_icons_star_5"
               android:layout_height="wrap_content"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="8dp"
               android:layout_alignBottom="@+id/head"
               android:id="@+id/nav"
               android:src="@drawable/button_selector_nav_mine"
               android:layout_height="wrap_content"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_marginRight="8dp"
               android:layout_alignBottom="@+id/head"
               android:id="@+id/tel"
               android:layout_toLeftOf="@+id/nav"
               android:src="@drawable/button_selector_tel_mine"
               android:layout_height="wrap_content"/>
</RelativeLayout>