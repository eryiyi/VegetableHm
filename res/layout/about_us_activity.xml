<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/mm_top_bg"
                    android:layout_height="@dimen/top_title_height">
        <TextView android:layout_width="wrap_content"
                  android:drawablePadding="8dp"
                  android:textSize="16sp"
                  android:padding="6dp"
                  android:id="@+id/back"
                  android:drawableLeft="@drawable/button_selector_back"
                  android:text="@string/back"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="关于我们"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <com.Lbins.VegetableHm.widget.ReboundScrollView android:layout_width="match_parent"
                                               android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="match_parent">
                <ImageView android:layout_width="match_parent"
                           android:src="@drawable/logo"
                           android:id="@+id/logo"
                           android:layout_centerHorizontal="true"
                           android:layout_marginTop="15dp"
                           android:layout_height="wrap_content"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_marginTop="15dp"
                              android:padding="15dp"
                              android:id="@+id/content"
                              android:textSize="16sp"
                              android:layout_weight="1"
                              android:lineSpacingMultiplier="1.4"
                              android:textColor="@color/text_color"
                              android:layout_height="wrap_content"/>
                    <RelativeLayout android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:id="@+id/bott"
                                    android:padding="15dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:text="电话："
                                  android:id="@+id/tel_id"
                                  android:textSize="16sp"
                                  android:textColor="@color/text_color"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:id="@+id/tel"
                                  android:layout_marginLeft="8dp"
                                  android:textSize="16sp"
                                  android:textColor="@color/btn_blue_normal"
                                  android:layout_toRightOf="@+id/tel_id"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="版权："
                                  android:layout_marginTop="8dp"
                                  android:layout_below="@+id/tel_id"
                                  android:id="@+id/address_id"
                                  android:textSize="16sp"
                                  android:textColor="@color/text_color"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:id="@+id/address"
                                  android:layout_marginTop="8dp"
                                  android:layout_marginLeft="8dp"
                                  android:layout_below="@+id/tel_id"
                                  android:textSize="16sp"
                                  android:textColor="@color/text_color"
                                  android:layout_toRightOf="@+id/address_id"
                                  android:layout_height="wrap_content"/>
                    </RelativeLayout>
            </LinearLayout>
    </com.Lbins.VegetableHm.widget.ReboundScrollView>
</LinearLayout>