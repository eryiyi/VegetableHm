<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/mm_main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/mm_top_bg"
                    android:layout_height="@dimen/top_title_height">
        <TextView android:layout_width="wrap_content"
                  android:text="蔬菜通登录"
                  android:drawablePadding="8dp"
                  android:textSize="16sp"
                  android:layout_centerInParent="true"
                  android:padding="6dp"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/logo"
                   android:visibility="gone"
                   android:layout_marginTop="25dp"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content"/>

        <EditText android:layout_width="match_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="25dp"
                  android:paddingLeft="15dp"
                  android:drawablePadding="8dp"
                  android:textSize="14sp"
                  android:id="@+id/mobile"
                  android:singleLine="true"
                  android:hint="您的手机号"
                  android:drawableLeft="@drawable/login_user"
                  android:background="@drawable/login_edit_bg"
                  android:layout_height="wrap_content">
        </EditText>
        <EditText android:layout_width="match_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="25dp"
                  android:paddingLeft="15dp"
                  android:drawablePadding="8dp"
                  android:textSize="14sp"
                  android:hint="密码"
                  android:id="@+id/password"
                  android:singleLine="true"
                  android:password="true"
                  android:drawableLeft="@drawable/login_pwr"
                  android:background="@drawable/login_edit_bg"
                  android:layout_height="wrap_content">
        </EditText>

        <Button android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="登  录"
                android:onClick="sureLogin"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_green_shape"
                android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:padding="12dp"
                  android:id="@+id/reg"
                  android:layout_marginTop="20dp"
                  android:paddingBottom="8dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:textColor="@color/white"
                  android:text="新用户注册"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"
                  android:background="@drawable/btn_orange_shape"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:padding="12dp"
                      android:layout_weight="1"
                      android:id="@+id/btn_kf"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:textColor="@color/white"
                      android:text="客服咨询中心"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:background="@drawable/btn_orange_shape"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="0dp"
                      android:padding="12dp"
                      android:layout_weight="1"
                      android:id="@+id/forgetpwr"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:textColor="@color/white"
                      android:text="忘记密码"
                      android:layout_marginLeft="30dp"
                      android:layout_marginRight="30dp"
                      android:background="@drawable/btn_orange_shape"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


    <!--广告-->

</LinearLayout>