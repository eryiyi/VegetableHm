<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/main"
              android:background="@color/mm_main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/mm_top_bg"
                    android:layout_height="@dimen/top_title_height">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/back"
                  android:drawablePadding="8dp"
                  android:textSize="16sp"
                  android:padding="6dp"
                  android:id="@+id/back"
                  android:drawableLeft="@drawable/button_selector_back"
                  android:textColor="@color/white"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="蔬菜通扫描下载"
                  android:textSize="18sp"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:textColor="@color/white"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:textColor="@color/red"
              android:textSize="18sp"
              android:padding="25dp"
              android:text="*请拿出手机扫一扫，马上下载"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="match_parent"
               android:layout_marginTop="25dp"
               android:layout_marginLeft="25dp"
               android:layout_marginRight="25dp"
               android:layout_weight="1"
               android:src="@drawable/erweima"
               android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:textColor="@color/red"
              android:layout_gravity="center_horizontal"
              android:textSize="18sp"
              android:id="@+id/btn_share"
              android:padding="12dp"
              android:text="*点击此处，马上分享！"
              android:layout_height="wrap_content"/>

</LinearLayout>