<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/mm_main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/top_bg"
                    android:layout_height="@dimen/top_title_height">
        <TextView android:layout_width="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="商圈"
                  android:gravity="center_vertical"
                  android:textColor="@color/white"
                  android:textSize="18sp"
                  android:layout_height="45dp"/>
    </RelativeLayout>

    <com.Lbins.VegetableHm.widget.ReboundScrollView android:layout_width="match_parent"
                                               android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">

            <RelativeLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/btn_white_shape"
                            android:layout_below="@+id/liner_one"
                            android:id="@+id/liner_one"
                            android:layout_height="50dp">
                <ImageView android:layout_width="30dp"
                           android:src="@drawable/star_circle"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="15dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/icon_one"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="金牌榜"
                          android:layout_toRightOf="@+id/icon_one"
                          android:layout_marginLeft="12dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/black"
                          android:textSize="16sp"
                          android:layout_centerVertical="true"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="15dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/sm_more"
                           android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/btn_white_shape"
                            android:layout_below="@+id/liner_one"
                            android:id="@+id/liner_two"
                            android:layout_height="50dp">
                <ImageView android:layout_width="30dp"
                           android:src="@drawable/afd"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="15dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/icon_two"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="附近经纪人"
                          android:layout_toRightOf="@+id/icon_two"
                          android:layout_marginLeft="12dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/black"
                          android:textSize="16sp"
                          android:layout_centerVertical="true"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="15dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/sm_more"
                           android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/btn_white_shape"
                            android:layout_below="@+id/liner_one"
                            android:id="@+id/liner_three"
                            android:layout_height="50dp">
                <ImageView android:layout_width="30dp"
                           android:src="@drawable/icon_ylzc"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="15dp"
                           android:layout_centerVertical="true"
                           android:id="@+id/icon_three"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="菜园资材"
                          android:layout_toRightOf="@+id/icon_three"
                          android:layout_marginLeft="12dp"
                          android:layout_gravity="center_vertical"
                          android:textColor="@color/black"
                          android:textSize="16sp"
                          android:layout_centerVertical="true"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_marginRight="15dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/sm_more"
                           android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </com.Lbins.VegetableHm.widget.ReboundScrollView>

</LinearLayout>